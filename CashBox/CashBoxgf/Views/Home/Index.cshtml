    <!-- SignUp  Form -->

    <div id="signupForm" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="signupFormLabel" aria-hidden="true">
        <div class="modal-dialog d-flex" role="document">
            <div class="modal-content rounded-0 align-self-center w-100 px-sm-4">
