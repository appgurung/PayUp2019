    <!--Sweet Alert JS-->
    <script src="@Url.Content("~/Scripts/sweetalert.js")"></script>
    <script>
        $(document).ready(function () {
            document.getElementById("LoginButton").onclick = function () {
                $("#loader").css({ "display": "block" });
                document.getElementById("LoginButton").innerText = "Logging in.."
                $("#ForgotPassword").css({ "display": "none" });
                document.getElementById("LoginButton").disabled = true;

                $.ajax({
                    url: '/Account/LoginVerification',
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({
                        UserIdentity: $('#Email').val(),
                        Password: $('#Password').val(),
                    }),
                    success: function (result) {

                        if (result.ResponseCode === 00) {

                            swal({
                                title: "Verification Successful",
                                text: result.Message,
                                type: "success",
                                confirmButtonText: "Continue to Dashboard"
                            },
                                function (isConfirm) {
                                    if (isConfirm) {
                                        window.location.href = "/Merchant/Dashboard";
                                    }
                                });

                        }
                        else if (result.ResponseCode === 01) {
                            $("#loader").css({ "display": "none" });
                            document.getElementById("LoginButton").innerText = "Login"
                            $("#ForgotPassword").css({ "display": "block" });
                            document.getElementById("LoginButton").disabled = false

                            swal({
                                title: "Verification Failed",
                                text: "Incorrect password",
                                type: "error",
                            });
                        }

                        else if (result.ResponseCode === 04) {
                            $("#loader").css({ "display": "none" });
                            document.getElementById("LoginButton").innerText = "Login"
                            $("#ForgotPassword").css({ "display": "block" });
                            document.getElementById("LoginButton").disabled = false

                            swal({
                                title: "Verification Failed",
                                text: "Incorrect email address",
                                type: "error",
                            });
                        }
                        else if (result.ResponseCode === 05) {
                            $("#loader").css({ "display": "none" });
                            document.getElementById("LoginButton").innerText = "Login"
                            $("#ForgotPassword").css({ "display": "block" });
                            document.getElementById("LoginButton").disabled = false

                            swal({
                                title: "Verification Failed",
                                text: "Incorrect phone number",
                                type: "error",
                            });
                        }
                    },
                    error: function (result) {
                        $("#loader").css({ "display": "none" });
                        document.getElementById("LoginButton").innerText = "Login"
                        $("#ForgotPassword").css({ "display": "block" });
                        document.getElementById("LoginButton").disabled = false
                        swal({
                            title: "Error",
                            text: "Client Side Error, please check internet connection",
                            type: "error"
                        });
                    }
                })
            }
        });
    </script>


    <script>
            $(document).ready(function () {
                document.getElementById("SignUpButton").onclick = function () {
                    if (document.getElementById("Password").value != document.getElementById("ConfirmPassword").value) {

                        document.getElementById("ErrorDisplay").innerHTML = "Password does not match";

                        return false;

                    }

                    $("#loader").css({ "display": "block" });
                    document.getElementById("SignUpButton").innerHTML = "Please Wait";
                    document.getElementById("ErrorDisplay").innerHTML = "";
                    document.getElementById("SignUpButton").disabled = true;

                    $.ajax({

                        url: '/Account/CreateAccount',
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({
                            FullName: $('#FullName').val(),
                            Email: $('#RegEmail').val(),
                            PhoneNo: $('#PhoneNo').val(),
                            Password: $('#RegPassword').val(),
                            ConfirmPassword: $('#ConfirmPassword').val(),
                        }),
                        success: function (result) {

                            if (result.ResponseCode === 00) {
                                swal({
                                    title: "Account Successfully Created",
                                    text: "Thanks for signing up, click button below to proceed to dashboard",
                                    type: "success",
                                    confirmButtonText: "Continue to Dashboard"
                                },
                                    function (isConfirm) {
                                        if (isConfirm) {
                                            window.location.href = "/Account/Login";
                                        }
                                    });

                            }

                            else if (result.ResponseCode === 04) {
                                $("#loader").css({ "display": "none" });
                                document.getElementById("SignUpButton").innerHTML = "Create Account";

                                document.getElementById("SignUpButton").disabled = false;
                                swal({
                                    title: "Password Problem",
                                    text: result.Message,
                                    type: "warning",
                                });
                            }
                            else if (result.ResponseCode === 02) {
                                $("#loader").css({ "display": "none" });
                                document.getElementById("SignUpButton").innerHTML = "Create Account";

                                document.getElementById("SignUpButton").disabled = false;

                                swal({
                                    title: "Password Problem",
                                    text: result.Message,
                                    type: "warning",
                                });
                            }
                            else if (result.ResponseCode == 03) {
                                $("#loader").css({ "display": "none" });
                                document.getElementById("SignUpButton").innerHTML = "Create Account";

                                document.getElementById("SignUpButton").disabled = false;
                                swal({
                                    title: "Password Problem",
                                    text: result.Message,
                                    type: "warning",
                                });
                            }

                            else if (result.ResponseCode == 01) {
                                $("#loader").css({ "display": "none" });
                                document.getElementById("SignUpButton").innerHTML = "Create Account";

                                document.getElementById("SignUpButton").disabled = false;

                                swal({
                                    title: "Provided E-Mail Already Exist",
                                    text: result.Message,
                                    type: "warning",
                                    showCancelButton: true,
                                    confirmButtonColor: "#DD6B55",
                                    confirmButtonText: "Login to Dashboard",
                                    closeOnConfirm: false
                                },
                                    function () {
                                        window.location.href = "/Account/Login";
                                    });
                            }

                            else if (result.ResponseCode == 08) {
                                $("#loader").css({ "display": "none" });
                                document.getElementById("LoginButton").innerText = "Login to Dashboard"

                                document.getElementById("LoginButton").disabled = false

                                swal({
                                    title: "Password Error",
                                    text: result.Message,
                                    type: "error",
                                });
                            }
                        },
                        error: function (result) {
                            $("#loader").css({ "display": "none" });
                            document.getElementById("SignUpButton").innerHTML = "Create Account";

                            document.getElementById("SignUpButton").disabled = false;
                            swal({
                                title: "Error",
                                text: "Client Side Error, please check internet connection",
                                type: "error"
                            });
                        }
                    })
                }
        });


            document.getElementById("ForgotPassword").onclick = function ()
            {
                $('#loginForm').modal('hide');
            }
    </script>
