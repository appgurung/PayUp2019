<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>

<script>

    $(function () {
      
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "ajax": {
                "url": "/TransactionLogs/GetLiveSuccessfulTransactions",
                "type": "GET",
                "data": "json"
            },
            "order": [5, "desc"],
            "columns": [
                { "data": "CustomerEmail", "autoWidth": true },
                { "data": "Amount", "autoWidth": true },
                { "data": "TransactionStatus", "autoWidth": true },
                { "data": "Purpose", "autoWidth": true },
                { "data": "MerchantRef", "autoWidth": true },
                { "data": "Date", "autoWidth": true },
            ]
        });
    });
    
    $(function () {
    
        $('#example3').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "ajax": {
                "url": "/TransactionLogs/GetLiveFailedTransactions",
                "type": "GET",
                "data": "json"
            },
            "order": [5, "desc"],
            "columns": [
                { "data": "CustomerEmail", "autoWidth": true },
                { "data": "Amount", "autoWidth": true },
                { "data": "TransactionStatus", "autoWidth": true },
                { "data": "Purpose", "autoWidth": true },
                { "data": "MerchantRef", "autoWidth": true },
                { "data": "Date", "autoWidth": true },
            ]
        });
    });

    $(function () {
  
        $('#example5').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "ajax": {
                "url": "/TransactionLogs/GetAllLiveTransactions",
                "type": "GET",
                "data": "json"
            },
            "order": [5, "desc"],
            "columns": [
                { "data": "CustomerEmail", "autoWidth": true },
                { "data": "Amount", "autoWidth": true },
                { "data": "TransactionStatus", "autoWidth": true },
                { "data": "Purpose", "autoWidth": true },
                { "data": "MerchantRef", "autoWidth": true },
                { "data": "Date", "autoWidth": true },
            ]
        });
    });

</script>
