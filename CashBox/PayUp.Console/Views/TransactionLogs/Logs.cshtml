                                        <div>
                                            <div class="table-responsive my-payment">
                                                <table id="example2" class="table table-striped table-bordered">
                            <thead>
                                                        <thead>
                                                            <tr>
                                                                <th>PAID FROM</th>
                                                                <th>AMOUNT</th>
                                                                <th>STATUS</th>
                                                                <th>PURPOSE</th>
                                                                <th>REFERENCE</th>
                                                                <th>DATE</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody></tbody>
                                                    </table>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingTwo">
                                    <h4 class="panel-title">
